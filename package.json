{
  "name": "dice-bard-web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run ci && node scripts/write-build-time.mjs && react-router build",
    "dev": "node scripts/write-build-time.mjs && react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "lint": "oxlint --deny-warnings .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "react-router typegen && tsc --noEmit",
    "ci": "npm run lint && npm run format:check && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@mdx-js/react": "^3.0.0",
    "@mdx-js/rollup": "^3.0.0",
    "@react-router/node": "^7.13.0",
    "@react-router/serve": "^7.13.0",
    "isbot": "^5.1.31",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.0",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@netlify/vite-plugin-react-router": "^2.1.3",
    "@react-router/dev": "^7.13.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.18"
  }
}
